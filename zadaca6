//Да се напише програма која вчитува матрица со димензии MxN (макс. 100x100). 
//На почетокот се внесуваат димензиите на матрицата, а потоа и елементите на матрицата кои се само вредностите 1 и 0. 
//Програмата треба да изброи и отпечати на СИ во колку од редиците и колоните има барем 3 последователни елементи со вредност 1.

#include<stdio.h>

int main(){
    int m,n;
    scanf("%d%d",&m,&n);
    int matrix[100][100];
    int i,j;
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) {
            scanf("%d",&matrix[i][j]);
        }
    }
    int counter1=0;
    int counter2=0;
    for (i = 0; i < m; i++){
        int repeating=0;
        for (j = 0; j < n; j++){
            if(matrix[i][j]==1){
                repeating++;
                if(repeating>=3){
                    counter1++;
                    break;
                }
            }
            else{
                repeating=0;
            }
        }
    }

    for (j = 0; j < n; j++) {
        int repeating=0;
        for (i = 0; i < m; i++) {
            if(matrix[i][j]==1){
                repeating++;
                if(repeating>=3){
                    counter2++;
                    break;
                }
            }
            else
            {
                repeating=0;
            }
        }
    }
    printf("%d",counter1+counter2);
    return 0;
}
